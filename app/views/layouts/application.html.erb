<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <header class="shadow-sm">
     <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <div class="container">

        <%= link_to "Bookers", root_path, class:"text-white" %>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
       </button>







      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

         <% if user_signed_in? %>

         <li>

          <i class="fas fa-home text-white"></i>

          <%= link_to "Home",user_path(current_user), class:"text-white" %>
         </li>


        <li>

         <i class="fas fa-users text-white"></i>

         <%= link_to "Users", users_path, class:"text-white" %>
        </li>

         <i class="fas fa-book-open text-white"></i>

        <li>
        <%= link_to "Books", books_path, class:"text-white" %>
      </li>
      <li>

       <i class="fas fa-sign-out-alt text-white"></i>

        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"text-white" %>
      </li>
    <% else %>

      <li>
        <i class="fas fa-home text-white"></i>
        <%= link_to "Home", root_path, class:"text-white" %>
      </li>
      <li>
        <i class="fas fa-link text-white"></i>

        <%= link_to "About", home_about_path, class:"text-white" %>
      </li>
      <li></li>
      <li>
        <i class="fas fa-user-plus text-white"></i>

        <%= link_to "Sign up", new_user_registration_path, class:"text-white" %>
      </li>

      <li>

        <i class="fas fa-sign-in-alt text-white"></i>

        <%= link_to "Log in", new_user_session_path, class:"text-white" %>
      </li>
    <% end %>

  </div>
  </div>
  </header>

<main class="mb-auto">
    <%= yield %>
    </main>



<footer>

  <div class = "container mt-5">
    <div class = "row">
      <div class ="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
  </footer>


  </body>
</html>
